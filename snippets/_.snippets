# custom ansible

snippet -- line -- #1
	---
	${1}
snippet hosts
	---
	- hosts: ${1}
	  vars:
	    metadata:
		  name: ${2}
		  description: >
		    ${3}
		groups:
		  - ${4}
snippet tasks
	tasks:
snippet name
	- name: ${1}
snippet bc
	become: True
snippet ini
	- name: ${1}
	  ini:
	    path: ${2}
	    section: ${3}
	    key: ${4}
	    ignore_missing_file: True
	  register: ${5}
snippet reg
	register: ${1}
snippet ign
	ignore_errors: ${1}
snippet cw
	changed_when: ${1}
snippet when
	when: ${1}
snippet whenl
	when:
	  - ${1}
	  - ${2}
snippet fail
	fail: msg="${1}"
snippet faill
	fail:
	  msg: >-
	    ${1}
snippet var
	${1}: ${2}
snippet cmd
	command: ${1}
snippet sh
	shell: ${1}
snippet sf
	- name: ${1}
	  set_facts:
	    ${2}: ${3}
